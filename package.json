{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "migrate:dev:apply": "prisma migrate dev --preview-feature",
    "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --collect-coverage",
    "test:e2e": "jest --config jest-e2e.config.ts --collect-coverage --runInBand --forceExit",
    "docker:e2e": "docker-compose -f docker-compose.e2e.yml -p e2e up --build --abort-on-container-exit --exit-code-from app --renew-anon-volumes",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose  -f docker-compose.dev.yml up --force-recreate --build -d",
    "docker:prisma:generate": "docker-compose  -f docker-compose.dev.yml exec membia-api npm run prisma:generate",
    "docker:migrate:dev:create": "docker-compose  -f docker-compose.dev.yml exec membia-api yarn migrate:dev:create",
    "docker:migrate:dev:apply": "docker-compose  -f docker-compose.dev.yml exec membia-api npm run migrate:dev:apply",
    "docker:dev:stop": "docker-compose  -f docker-compose.dev.yml down ",
    "docker:dev:uninstall": "docker-compose  -f docker-compose.dev.yml down -v",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.0.8",
    "@prisma/client": "^2.27.0",
    "apollo-server-express": "2.19.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.23.0",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": ">=6",
    "jest": "27.0.6",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "prisma-dbml-generator": "^0.6.0",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
